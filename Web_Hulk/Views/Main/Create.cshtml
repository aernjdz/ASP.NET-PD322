@model CategoryCreateViewModel;

<div class="container col-md-4 mt-4 ">
    <h2 class="text-center">Adding a new category</h2>

    <form asp-action="Create" method="post" class="mt-4" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <label asp-for="Image"></label>
            <input asp-for="Image" class="form-control" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <a href="/" class="btn btn-dark mt-4">Cancel</a>
        <button type="submit" class="btn btn-dark mt-4">Create</button>
    </form>

</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}