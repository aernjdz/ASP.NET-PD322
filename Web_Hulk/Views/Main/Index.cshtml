
@model IList<CategoryItemViewModel>

<div class="container mt-4">
    <h1 class="text-center mb-3">Welcome!</h1>
    <div class="row">
        @foreach (var c in Model)
        {
            <div class="col-lg-2 col-md-4 col-sm-6 mt-4">
                <div class="card h-100">
                    <a asp-action="Index" asp-controller="Products" asp-route-id="@c.Id">
                        <img class="card-img-top img-fluid" src="/images/@c.Image" alt="@c.Name">
                    </a>    
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h6 class="card-title mt-auto text-center">@c.Name</h6>
                    </div>
                </div>
            </div>
        }
    </div>

</div>