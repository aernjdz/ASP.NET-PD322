@model IList<CategoryItemViewModel>
<div class="container">
    <h1 class="text-center">Тактичне спрорядження</h1>

    <a href="/main/create" class="btn btn-success">Додати</a>
    <div class="row mt-4">

        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card" style="width: 100%;">
                    <img src="/images/@item.Image" class="card-img-top img-fluid" alt="@item.Name">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>

                        <div class="d-flex justify-content-between mt-auto">
                            <a asp-action="Edit" asp-route-id="@item.Id"
                               class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a href="#" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>

                    </div>


                </div>
            </div>

            <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteModalLabel-@item.Id">Видалення категорії</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <p>Ви дійсно хочете видалити "@item.Name"?</p>
                            <form method="post" action="/Main/Delete">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-danger">Видалити</button>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Скасувати</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</div>